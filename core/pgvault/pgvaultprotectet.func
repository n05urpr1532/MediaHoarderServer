vaultrestore() {
  notrun=$(cat /var/mhs/state/program.temp)
  buildup=$(cat /var/mhs/state/pgvault.output)

  if [ "$buildup" == "" ]; then buildup="NONE"; fi
  tee <<- EOF

━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
